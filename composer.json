{
    "name": "logto/sdk",
    "description": "Logto PHP SDK.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Logto\\Sdk\\": "src/"
        }
    },
    "scripts": {
        "dev": ["Composer\\Config::disableProcessTimeout", "php -S localhost:5000 -t samples"],
        "test": "phpunit tests",
        "docs": "rm -rf docs/api && php phpDocumentor.phar && prettier --write docs/api"
    },
    "authors": [
        {
            "name": "Silverhand Inc.",
            "email": "contact@silverhand.io"
        }
    ],
    "require": {
        "php": ">=8.1",
        "firebase/php-jwt": "^6.8",
        "guzzlehttp/guzzle": "^7.7",
        "phpfastcache/phpfastcache": "^9.1",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "saggre/phpdocumentor-markdown": "^0.1.3"
    }
}
